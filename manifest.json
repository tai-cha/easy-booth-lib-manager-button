{
  "manifest_version": 3,
  "name": "Easy Booth Lib Manager Button",
  "version": "1.0.0",
  "description": "Booth上で、Booth Library ManagerでDLするボタンを押しやすい位置に配置します（現在日本語のみ対応）",
  "browser_specific_settings": {
    "gecko": {
      "id": "easy-booth-lib-manager-button@taichan.site"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://accounts.booth.pm/library*",
        "*://*.booth.pm/items/*",
        "*://booth.pm/items/*",
        "*://*.booth.pm/*/items/*",
        "*://booth.pm/*/items/*"
      ],
      "js": [
        "src/content.ts"
      ]
    }
  ]
}